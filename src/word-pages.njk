---
layout: base.njk
pagination:
  data: combined
  size: 1
  alias: word
  resolve: values
permalink: "word/{{ word.title | lower }}/index.html"
eleventyComputed:
  title: "「{{ word.title }}」- kemdict"
---

{% import "macros.njk" as macros %}

<div class="h">
  <h1><a href="/">kemdict (β)</a></h1>
  {% include "searchBar.njk" %}
</div>

{% if word.dict_revised %}
<div>{{ macros.render_word(word, "dict_revised") }}</div>
{% endif %} {% if word.dict_concised %}
<div>{{ macros.render_word(word, "dict_concised") }}</div>
{% endif %} {% if word.moedict_twblg %}
<div>{{ macros.render_word(word, "moedict_twblg") }}</div>
{% endif %} {% if word.dict_idioms %}
