---
/* An outgoing link.
   This lets me avoid specifying target and rel over and over again.

   klass: classes for the anchor element
   id: id of the anchor element
   href: where the link goes
 */

import OutSvelte from "./Out.svelte";

export interface Props {
  class?: string;
  id?: string;
  href?: string;
}
const { href, id } = Astro.props;
const klass = Astro.props.class;
const content = await Astro.slots.render("default");
---

<OutSvelte href={href} class={klass} id={id}>{content.trim()}</OutSvelte>
