---
export interface Props {
  /**
   * Whether this is for a search page. In that case the sort options should be displayed.
   */
  search?: boolean;
  initialInput?: string;
  initialMatchSelection?: string;
  submitSuffix?: string;
}
const { search, initialInput, initialMatchSelection, submitSuffix } =
  Astro.props;

import DarkModeToggle from "./DarkModeToggle.svelte";
import SearchBar from "./SearchBar.svelte";
---

<div class="mb-8">
  <nav class="my-2 flex items-center justify-between">
    <a class="font-bold hover:underline" href="/">Kemdict 國家語言整合典</a>
    <div class="text-right">
      <DarkModeToggle client:load />
    </div>
  </nav>
  {
    /* TODO: Include advanced search params, like match type, filters, dictionary, length, etc. in this page. */
  }
  {
    (
      <SearchBar
        initialInput={initialInput}
        initialMatchSelection={initialMatchSelection}
        submitSuffix={submitSuffix}
        url={search ? Astro.url : undefined}
        client:load
      />
    )
  }
</div>
