---
export interface Props {
  title: string;
  initialInput?: string;
  initialMatchSelection?: string;
  wantHeader?: boolean;
  class?: string;
}
const {
  title,
  initialInput,
  initialMatchSelection,
  wantHeader = true,
} = Astro.props;
const klass = Astro.props.class;

import BaseLayout from "$src/BaseLayout.astro";
import Header from "$src/components/Header.astro";
---

<BaseLayout title={title}>
  <Fragment slot="head"><slot name="head" /></Fragment>
  {
    wantHeader && (
      <Header
        search={true}
        initialInput={initialInput}
        initialMatchSelection={initialMatchSelection}
      />
    )
  }
  <div class:list={[klass, "mx-auto max-w-2xl"]}>
    <slot />
  </div>
</BaseLayout>
